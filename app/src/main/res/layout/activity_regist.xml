<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/view_top"
        />

    <TextView
        android:text="账号"
        android:id="@+id/tv_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"
        style="@style/tv_normal" />

    <EditText
        android:id="@+id/et_username"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_username"
        app:layout_constraintLeft_toRightOf="@id/tv_username"
        android:hint="输入账号"
        style="@style/et_normal" />

    <TextView
        android:text="密码"
        android:id="@+id/tv_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        style="@style/tv_normal" />

    <EditText
        android:id="@+id/et_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_password"
        app:layout_constraintLeft_toRightOf="@id/tv_password"
        android:hint="输入密码"
        style="@style/et_normal" />

    <TextView
        android:text="名字"
        android:id="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        style="@style/tv_normal" />

    <EditText
        android:id="@+id/et_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        android:hint="输入名字"
        style="@style/et_normal" />

    <TextView
        android:text="年龄"
        android:id="@+id/tv_age"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        style="@style/tv_normal"
        />

    <EditText
        android:id="@+id/et_age"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_age"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        android:hint="输入年龄"
        style="@style/et_normal"
        />

    <View
        style="@style/style_line_ver"
        app:layout_constraintBottom_toTopOf="@+id/tv_regist"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_regist"
        android:text="注册"
        style="@style/tv_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
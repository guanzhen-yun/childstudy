<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="用户信息"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rl_top"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_photo"
        style="@style/style_set"
        android:layout_below="@id/rl_top"
        android:text="头像" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/view_top"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/tv_addphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_top"
        android:layout_toLeftOf="@+id/iv_head"
        android:padding="20dp"
        android:text="添加头像"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:id="@+id/view_head"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_photo"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_nick"
        style="@style/style_set"
        android:layout_below="@id/view_head"
        android:text="昵称" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="设置昵称"
        android:id="@+id/tv_nickname"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_head"
        android:padding="20dp"
        android:textSize="20sp"
        android:gravity="right"
        android:textColor="@color/black"
        android:textColorHint="#999999"
        />

    <View
        android:id="@+id/view_nick"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_nick"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_sex"
        style="@style/style_set"
        android:layout_below="@id/view_nick"
        android:text="性别" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_nick"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="2"
        tools:listitem="@layout/item_sex" />

    <View
        android:id="@+id/view_sex"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_sex"
        android:background="@color/black" />


</RelativeLayout>
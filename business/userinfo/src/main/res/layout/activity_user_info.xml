<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cl_body"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <include
    android:id="@+id/view_title"
    layout="@layout/layout_title_view" />

  <TextView
    android:id="@+id/tv_photo"
    style="@style/style_set"
    android:text="头像"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_title" />

  <TextView
    android:id="@+id/tv_addphoto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="添加头像"
    android:textColor="@color/black"
    android:textSize="18sp"
    app:layout_constraintBaseline_toBaselineOf="@id/tv_photo"
    app:layout_constraintRight_toLeftOf="@+id/iv_head" />

  <com.tantan.base.view.ArrowRightView
    android:id="@+id/iv_arrow_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    app:layout_constraintBottom_toBottomOf="@id/tv_photo"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/tv_photo" />

  <View
    android:id="@+id/view_photo"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="@id/tv_photo"
    app:layout_constraintLeft_toLeftOf="@id/tv_addphoto"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@id/tv_photo" />

  <ImageView
    android:id="@+id/iv_head"
    android:layout_width="@dimen/dp_40"
    android:layout_height="@dimen/dp_40"
    android:layout_marginRight="20dp"
    android:scaleType="fitXY"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@id/tv_photo"
    app:layout_constraintRight_toLeftOf="@id/iv_arrow_right"
    app:layout_constraintTop_toTopOf="@id/tv_photo"
    tools:background="@color/black" />

  <View
    android:id="@+id/view_line_photo"
    style="@style/style_line_ver"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_photo" />

  <TextView
    android:id="@+id/tv_nick"
    style="@style/style_set"
    android:text="昵称"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_line_photo" />

  <TextView
    android:id="@+id/tv_nickname"
    style="@style/style_tv_sel_hint"
    android:hint="设置昵称"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_line_photo" />

  <View
    android:id="@+id/view_line_nick"
    style="@style/style_line_ver"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_nick" />

  <TextView
    android:id="@+id/tv_sex"
    style="@style/style_set"
    android:text="性别"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_line_nick" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_sex"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_line_nick"
    tools:itemCount="2"
    tools:listitem="@layout/item_sex" />

  <View
    android:id="@+id/view_line_gender"
    style="@style/style_line_ver"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_sex" />

  <TextView
    android:id="@+id/tv_age"
    style="@style/style_set"
    android:text="年龄"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_line_gender" />

  <TextView
    android:id="@+id/tv_age_value"
    style="@style/style_tv_sel_hint"
    android:hint="请选择年龄"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_line_gender" />

  <View
    android:id="@+id/view_line_age"
    style="@style/style_line_ver"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_age" />

</androidx.constraintlayout.widget.ConstraintLayout>
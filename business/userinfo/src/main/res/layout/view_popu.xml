<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cl_body"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/tv_photo_take"
    style="@style/style_tv_pop_text"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_ripper_pop_top"
    android:text="拍照"
    app:layout_constraintBottom_toTopOf="@id/view_line_album"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

  <View
    android:id="@+id/view_line_album"
    style="@style/style_line_ver"
    android:layout_width="0dp"
    app:layout_constraintBottom_toTopOf="@+id/tv_photo_album"
    app:layout_constraintLeft_toLeftOf="@id/tv_photo_take"
    app:layout_constraintRight_toRightOf="@id/tv_photo_take" />

  <TextView
    android:id="@+id/tv_photo_album"
    style="@style/style_tv_pop_text"
    android:text="从相册选择"
    app:layout_constraintBottom_toTopOf="@id/view_line_cancel"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

  <View
    android:id="@+id/view_line_cancel"
    style="@style/style_line_ver"
    android:layout_width="0dp"
    app:layout_constraintBottom_toTopOf="@id/tv_photo_cancel"
    app:layout_constraintLeft_toLeftOf="@id/tv_photo_album"
    app:layout_constraintRight_toRightOf="@id/tv_photo_album" />

  <TextView
    android:id="@+id/tv_photo_cancel"
    style="@style/style_tv_pop_text"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_ripper_pop_bottom"
    android:text="取消"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>